{
  "name": "harvest-brothers",
  "version": "1.0.0",
  "build": {
    "command": "npm run build"
  },
  "run": {
    "command": "node start.js"
  },
  "env": {
    "NODE_ENV": "production",
    "PORT": "8080",
    "SESSION_SECRET": "${SESSION_SECRET}"
  },
  "static": {
    "directory": "dist"
  },
  "healthCheck": {
    "path": "/health",
    "port": 8080
  }
}